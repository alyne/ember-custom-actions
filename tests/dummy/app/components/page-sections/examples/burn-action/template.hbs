<tr class="action" {{did-update this.burnedObserver this.burned}}>
  <td>
    {{! template-lint-disable link-href-attributes }}
    <a
      role="button"
      class="btn btn-lg btn-outline btn-ember {{if this.burned 'disabled'}}"
      {{on "click" this.burn}}
    >Burn all bridges</a>
  </td>
  <td>
    {{#if this.pending}}
      <p class="status text-warning">Pending</p>
    {{else}}
      <p class="status text-success">Waiting</p>
    {{/if}}
    <h4 class="request">bridges/burn</h4>
  </td>
  <td>
    {{#if this.burned}}
      <div class={{if this.burned "show-result"}}>
        <span class="h4 text-danger">Bridges Burned</span>
      </div>
    {{else}}
      <span class="text-muted call-to-action">Call custom action</span>
    {{/if}}
  </td>
</tr>